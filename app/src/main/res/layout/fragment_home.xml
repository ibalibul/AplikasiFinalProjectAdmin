<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/bg_gradasi">
        
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/welcome_admin"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:text="User Account"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Refund Status"
            android:drawableLeft="@drawable/ic_baseline_assignment_24"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Ticket List"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_article_24"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Add Ticket"
            android:drawableLeft="@drawable/ic_baseline_post_add_24"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>